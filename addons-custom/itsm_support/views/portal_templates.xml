<odoo>

    <!-- ===============================
         Ticket List
    ================================ -->
    <template id="portal_my_tickets" name="My Tickets">
        <t t-call="portal.portal_layout">
            <div class="container my-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="mb-1">My Support Tickets</h2>
                        <small class="text-muted">
                            Track your requests and responses
                        </small>
                    </div>
                    <a href="/support" class="btn btn-primary">
                        + New Ticket
                    </a>
                </div>
                <!-- Ticket List -->
                <div class="card shadow-sm">

                    <t t-if="tickets">

                        <div class="table-responsive">

                            <table class="table align-middle table-hover mb-0">

                                <thead class="table-light">
                                    <tr>
                                        <th style="width:140px;">Ticket #</th>
                                        <th>Subject</th>
                                        <th style="width:130px;">Priority</th>
                                        <th style="width:140px;">Status</th>
                                        <th style="width:150px;">Last Update</th>
                                        <th style="width:100px;"></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-foreach="tickets" t-as="t">

                                        <tr>

                                            <!-- Number -->
                                            <td class="fw-semibold text-muted">
                                                <t t-esc="t.name"/>
                                            </td>

                                            <!-- Subject -->
                                            <td>
                                                <div class="fw-semibold">
                                                    <t t-esc="t.description or t.name"/>
                                                </div>
                                            </td>

                                            <!-- Priority -->
                                            <td>
                                                <span class="badge bg-warning text-dark"
                                                    t-if="t.priority == '2'">Medium</span>

                                                <span class="badge bg-danger"
                                                    t-if="t.priority == '3'">High</span>

                                                <span class="badge bg-secondary"
                                                    t-if="not t.priority or t.priority == '1'">Low</span>
                                            </td>

                                            <!-- Status -->
                                            <td>
                                                <span t-attf-class="badge rounded-pill bg-#{t.stage_id.color}">
                                                    <t t-esc="t.stage_id.name"/>
                                                </span>
                                            </td>

                                            <!-- Last Update -->
                                            <td class="text-muted small">
                                                <t t-esc="t.write_date.strftime('%d %b %Y')"/>
                                            </td>

                                            <!-- Action -->
                                            <td>
                                                <a t-att-href="'/my/tickets/%s' % t.id"
                                                class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>

                                        </tr>

                                    </t>
                                </tbody>

                            </table>

                        </div>

                    </t>


                    <!-- Empty State -->
                    <t t-else="">
                        <div class="text-center p-5">

                            <h5 class="mb-2">No tickets yet</h5>
                            <p class="text-muted">
                                When you submit a request, it will appear here.
                            </p>

                            <a href="/support" class="btn btn-primary mt-2">
                                Create your first ticket
                            </a>

                        </div>
                    </t>

                </div>

            </div>

        </t>
    </template>



    <!-- ===============================
         Ticket Detail
    ================================ -->
    <template id="portal_ticket_detail" name="Ticket Detail">
        <t t-call="portal.portal_layout">

            <div class="container my-4">

                <!-- Back button -->
                <a href="/my/tickets" class="btn btn-outline-secondary mb-3">
                    ‚Üê Back to Tickets
                </a>


                <!-- Main Card -->
                <div class="card shadow-sm">

                    <div class="card-body">

                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">

                            <div>
                                <h4 class="mb-1">
                                    <t t-esc="ticket.name"/>
                                </h4>

                                <small class="text-muted">
                                    Created on
                                    <t t-esc="ticket.create_date.strftime('%d %b %Y')"/>
                                </small>
                            </div>

                            <!-- Status -->
                            <span class="badge bg-info fs-6">
                                <t t-esc="ticket.stage_id.name"/>
                            </span>

                        </div>


                        <hr/>


                        <!-- Description Section -->
                        <div class="mb-2">
                            <h6 class="text-muted mb-2">Description</h6>

                            <div class="p-3 bg-light rounded">

                                <t t-if="ticket.description">
                                    <t t-esc="ticket.description"/>
                                </t>

                                <t t-else="">
                                    <span class="text-muted">
                                        No description provided.
                                    </span>
                                </t>

                            </div>
                        </div>


                        <!-- Future chatter placeholder -->
                        <!--

                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="ticket"/>
                        </t>
                        -->

                    </div>

                </div>

            </div>

        </t>
    </template>


</odoo>
