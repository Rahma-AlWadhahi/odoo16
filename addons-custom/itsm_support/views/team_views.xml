<odoo>

    <record id="itsm_team_action" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">itsm.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree -->
    <record id="itsm_team_tree" model="ir.ui.view">
        <field name="name">itsm.team.tree</field>
        <field name="model">itsm.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manager_id"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="itsm_team_form" model="ir.ui.view">
        <field name="name">itsm.team.form</field>
        <field name="model">itsm.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager_id"/>
                        <field name="member_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
